# Environment Variables for Survey Management Application
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-256-bits-long-replace-this-immediately
JWT_EXPIRES_IN=1h
BCRYPT_SALT_ROUNDS=12

# Database Configuration
DATABASE_PATH=./survey.db

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Default Admin Credentials (CHANGE IMMEDIATELY)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_CREATOR_USERNAME=creator
DEFAULT_CREATOR_PASSWORD=creator123

# Security Headers
ENABLE_SECURITY_HEADERS=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
